<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pknu.ebtalk.mappers.board.INotificationMapper">

    <insert id="insertNotificationInfo" parameterType="com.pknu.ebtalk.dto.board.BoardDto"
            useGeneratedKeys="true" keyProperty="no">
        INSERT INTO
            board(user_id, b_category_no, title, content, views, created_at)
        VALUES
            (
                #{user_id},
                1,
                #{title},
                #{content},
                #{views},
                now()
            )
    </insert>

    <select id="selectNotificationInfoByNo" parameterType="Integer" resultType="com.pknu.ebtalk.dto.board.BoardDto">
        SELECT * FROM board
        WHERE no = #{no};
    </select>

    <update id="updateNotificationInfo" parameterType="com.pknu.ebtalk.dto.board.BoardDto">
        UPDATE board
        SET
            title = #{title},
            content = #{content}
        WHERE
            no = #{no}
    </update>

    <delete id="deleteNotificationInfoByNo" parameterType="Integer">
        DELETE FROM
            board
        WHERE
            no = #{no}
    </delete>

    <!-- 게시글 리스트 관련 쿼리들 -->
    <select id="selectBoardAllList" resultType="com.pknu.ebtalk.dto.board.BoardDto">
        SELECT * FROM board;
    </select>

    <!-- 게시물 총 개수 구하기 -->
    <select id="getCount" resultType="int">
        SELECT count(*) as listCnt
        FROM board
    </select>

    <!-- 페이징을 위한 게시글 리스트 -->
    <select id="getListPage" parameterType="com.pknu.ebtalk.vo.PaginationVo" resultType="com.pknu.ebtalk.dto.board.BoardDto">
        SELECT *
        FROM board
        ORDER BY no DESC
            LIMIT #{rowCount}
        OFFSET #{offset}
    </select>

    <update id="updateHits" parameterType="Integer">
        UPDATE board SET views = views + 1 WHERE no = #{no}
    </update>

    <!-- 검색 쿼리 -->
    <select id="searchNotifications" parameterType="map" resultType="com.pknu.ebtalk.dto.board.BoardDto">
        SELECT * FROM board
        WHERE
        <choose>
            <when test="searchKey == 'title'">
                title LIKE CONCAT('%', #{keyword}, '%')
            </when>
            <when test="searchKey == 'user_id'">
                user_id LIKE CONCAT('%', #{keyword}, '%')
            </when>
        </choose>
        ORDER BY no DESC
        LIMIT #{paginationVo.rowCount}
        OFFSET #{paginationVo.offset}
    </select>

    <!-- 검색 결과의 총 개수 구하기 -->
    <select id="countSearchNotifications" parameterType="map" resultType="int">
        SELECT count(*) FROM board
        WHERE
        <choose>
            <when test="searchKey == 'title'">
                title LIKE CONCAT('%', #{keyword}, '%')
            </when>
            <when test="searchKey == 'user_id'">
                user_id LIKE CONCAT('%', #{keyword}, '%')
            </when>
        </choose>
    </select>
</mapper>